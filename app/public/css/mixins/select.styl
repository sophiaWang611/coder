@import "mixins"

.ms-select
  position fixed
  bottom 0
  background-color #FFFFFF
  width 100%
  .ms-select-header
    height 48px
    line-height 48px
    position relative
    border 1px solid #eee
    h2
      font-weight lighter
      font 20px #000
      text-align center
      [role="length"]
        line-height 19px
        height 19px
        width 19px
        border-radius 19px
        border 1px solid #999999
        font 13px #999
        display inline-block
        margin-left 5px
        position relative
        top -2px
    [role="close"]
      position absolute
      color ms-green
      font-size 30px
      width 48px
      height 48px
      top 0
      right 0
      text-align center
      background url("/img/close-lt.png") no-repeat center center
      background-size 14px 14px
  .select-item
    box-sizing border-box
    margin-left 15px
    border-bottom #eee solid 1px
    &.selected
      position relative
      &:after
        content ""
        height 22px
        width 22px
        background url("/img/choosed-lt.png") no-repeat left top
        background-size 22px 22px
        position absolute
        right 15px
        top 50%
        margin-top -11px
    &.disable
      .coupon-lt
        .price
          price 22px #999
        .coupon-lt-info
          h5
            font 13px #999
          div
            font 11px #ccc
      .schedule-item
        color #ccc
.select-scroll
  overflow-y auto
  height 284px
.coupon-lt
  height 51px
  display block
  flexbox center start
  .price
    price 22px ms-green
    margin-right 15px
  .coupon-lt-info
    h5
      font 13px ms-blank
    div
      font 11px ms-less-blank

.ms-select-body
  flexbox start start

.schedule-item
  padding 10px 0
  display block

.ms-select-scroll
  overflow-y auto
  height 284px
  flex 1

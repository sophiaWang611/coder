shop-attention()
  color #999999
  font-size 14px
  span
    color #ffaa30
    margin-left 4px

food-name(font-size = 16px)
  color #444444
  font-size font-size
  line-height 1.1

food-ps()
  color #999999
  font-size 13px
  line-height 1.3

food-liked()
  color #cccccc
  font-size 12px
  line-height 1
  &:before
    content ''
    background url("/img/trade/liked-icon.png") no-repeat left top
    background-size 12px 12px
    height 12px
    width 14px
    margin-right 3px
    display inline-block
    position relative
    top 1px

food-limit(font-size = 12px)
  color #cccccc
  line-height 1
  font-size font-size

food-order-action()
  color #76b43c
  font-size 18px
  height 23px
  overflow hidden
  line-height 28px
  min-width 80px
  text-align center
  padding 0 25px
  position relative
  box-sizing border-box
  .food-num-add,
  .food-num-reduce
    height 23px
    width 23px
    display block
    overflow hidden
    position absolute
    bottom 0
  .food-num-add
    background url("/img/trade/add-icon.png") no-repeat center center
    background-size 22px 22px
    right 0
    &:hover
      background url("/img/trade/add-press-icon.png") no-repeat center center
      background-size 22px 22px
  .food-num-reduce
    background url("/img/trade/reduce-icon.png") no-repeat center center
    background-size 22px 22px
    left 0
    &:hover
      background url("/img/trade/reduce-press-icon.png") no-repeat center center
      background-size 22px 22px
  .food-num-add.disabled
    background url("/img/trade/add-disable-icon.png") no-repeat center center
    background-size 22px 22px
  .food-num-reduce.disabled
    background url("/img/trade/reduce-disable-icon.png") no-repeat center center
    background-size 22px 22px

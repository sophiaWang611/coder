//箭头
arrow(color = #ccc,direction = right)
  position relative
  padding-right 20px
  cursor pointer
  &:after
    content ''
    position absolute
    right 3px
    top 50%
    margin-top -5px
    display block
    border-color color
    border-width 2px 2px 0 0
    border-style solid
    height 8px
    width 8px
    transition all .2s linear
    if direction == right
      transform rotate(45deg)
    if direction == bottom
      transform rotate(135deg)
    if direction == left
      transform rotate(225deg)
    if direction == top
      transform rotate(315deg)


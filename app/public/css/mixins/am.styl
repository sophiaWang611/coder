@import "flexbox"

.am-dialog:not([am-version])
  display: none;
  position: absolute;
  -webkit-box-sizing: border-box;
  margin: 0 auto !important;
  width: 100%;
  top: 45%;
  left: 0;
  padding: 0 20px;
  &[am-mode~="show"]
    display block
  .am-dialog-wrap
    padding-top: 16px;
    max-width: 320px;
    margin: 0 auto;
    border-top-left-radius: 8px;
    border-top-right-radius: 8px;
    border-bottom-left-radius: 8px;
    border-bottom-right-radius: 8px;
    -webkit-background-clip: padding-box;
    background-color: #ebebeb;
  .am-dialog-header
    -webkit-box-sizing border-box
    box-sizing border-box
    padding 6px 10px 0
    h3
      font-size 16px
      text-align center
      color #444
  .am-dialog-body
    -webkit-box-sizing border-box
    box-sizing border-box
    padding 10px 10px 0
    .am-dialog-brief
      display: block
      font-size: 14px
      line-height: 1.5
      text-align: center
      color: #777
  .am-dialog-footer
    margin-top: 26px;
    border-top: 1px solid #c7c8cc;
    flexbox start start
    .am-dialog-button
      flex 1
      display: block;
      width: 100%;
      height: 44px;
      line-height: 44px;
      font-size: 18px;
      background: none;
      border: 0 none;
      outline: 0 none;
      -webkit-appearance: none;
      padding: 0;
      color: #76b43c;
      text-align: center;
      & :first-child
        border-left: 0 none;